extends /extends/site-base.pug

append vars
  //- SP全体のmeta情報
    - var title    = ['タイトル', 'ogタグ用タイトル'];
    - var desc     = ['ディスクリプション', 'ogディスクリプション'];
    - var keyword  = 'キーワード,キーワード';
    - var siteName = 'サイト名';
    - var ogUrl    = 'http://hoge.com/';
    - var ogImg    = 'http://hoge.com/hoge.png';
    - var ogType   = 'website';

block meta
  include /includes/meta.pug
    //- ピンチでズームさせない
    meta(name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no,maximum-scale=1")
    //- ピンチでズームさせる
      meta(content="width=device-width,initial-scale=1" name="viewport")
block styles
  link(rel="stylesheet" href=relative('sp/styles/style.css'))
block scripts
  script(src=relative('sp/scripts/bundle.js'))
//-block else
  link(href="/apple-touch-icon-precomposed.png" rel="apple-touch-icon-precomposed" type="image/png")
